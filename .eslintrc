{
  "root": true,
  "plugins": [
    "react-hooks"
  ],
  "rules": {
    "operator-linebreak": [2, "before"],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  },
  "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module",
      "ecmaFeatures": {  
          "jsx": true,
          "modules": true
      }
  }
}

